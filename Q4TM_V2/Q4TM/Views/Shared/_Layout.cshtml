<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .affix {
            top: 0;
            width: 100%;
            z-index: 9999 !important;
        }

            .affix + .page-header {
                padding-top: 150px;
            }
        .footer {
            background-color: #4D4747;
            color: lightblue;
            height: 100px;
            }
        
        .vsides_font a {
            text-decoration: none;
            color: aqua;            
            padding:15px;
        }

        .vsides_font {
            background-color: black;
            border: none;
        }
      
    </style>
</head>
<body>
    <div class="page-header" style="margin-top:-45px">
        <div class="row">
            <div class="col-md-3">
                <img src="~/Content/Images/srasys.png" />
            </div>
            <div class="col-md-6" style="text-align:center">
                <h3>SRASYS INNOVATIONS (INDIA) PRIVATE LIMITED</h3>
                <h4 style="font-weight:bold">TIME MANAGEMENT</h4>

            </div>
            <div class="col-md-3">
                <img src="~/Content/Images/srasys.png" />
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse" data-spy="affix" data-offset-top="70">
        <div class="container-fluid">
            <div class="navbar-header" style="padding-left:50px">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="color:white;font-weight:bold">Welcome To 4QTM</a>
            </div>
            <div class="navbar-collapse collapse" id="myNavbar">
                <ul class="nav navbar-nav" style="padding-left:40px">
                    <li class="active">@Html.ActionLink("Home", "Index")</li>
                    <li>@Html.ActionLink("About", "About")</li>
                    <li>@Html.ActionLink("Contact", "Contact")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right" style="padding:0px;padding-right:50px">
                    @*<li><i class="glyphicon glyphicon-user">@Html.ActionLink("Register", "Register")</i></li>
                    <li><i class="glyphicon glyphicon-log-in">@Html.ActionLink("Login", "Login")</i></li>*@
                    <li><a href="Register"><span class="glyphicon glyphicon-user"></span> Register</a></li>
                    <li><a href="Login"><span class="glyphicon glyphicon-log-in"></span> Login</a> </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@

        <footer class="footer" id="foot">
            <table frame="vsides" align="center">
                <tr class="vsides_font">
                    <td><a href="Index">Home </a></td>&nbsp;&nbsp;
                    <td><a href="About">About</a></td>&nbsp;&nbsp;
                    <td><a href="Contact">Contact</a></td>&nbsp;&nbsp;
                </tr>
            </table>
            <p align="center">
                &copy; All Rights are Reserved @DateTime.Now.Year <br>
                Developed By MCA Student(T. SRINIVASULU)
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
